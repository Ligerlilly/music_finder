<h1><%= @band.name %></h1>

<% if @band.venues.any? %>
  <h3>Is playing at these venues</h3>
  <ul>
    <% @band.venues.each do |venue| %>
      <li><a href="/venues/<%= venue.id %>"><%= venue.name %></a></li>
    <% end %>
  </ul>

<% end %>

<a href="/bands/<%= @band.id %>/edit">Update Band</a><br>

<a href="/bands/<%= @band.id %>/venues/new">Add a Venue to a Band</a><br>

